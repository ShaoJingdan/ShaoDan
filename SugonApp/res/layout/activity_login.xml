<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       
        android:contentDescription="@string/logo"
        />
    <RelativeLayout 
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">
        <EditText
            android:id="@+id/et_account"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/account"
            android:layout_weight="1"/>
        <TextView 
            
            android:layout_toRightOf="@id/et_account"
            android:layout_width="100dp"
            android:layout_height="wrap_content"  
            android:layout_alignTop="@id/et_account"
            android:layout_alignBottom="@id/et_account"
            android:gravity="center"
            android:text=" @sugon.com"
            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_account"
            android:hint="@string/password"
            android:layout_below="@+id/et_account"
            android:password="true"/>
        <CheckBox
            android:id="@+id/cb_mima"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/et_account"
			android:layout_below="@id/et_password"
			android:text="记住密码"
			android:textColor="#000000" />
        <CheckBox
            android:id="@+id/cb_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password"
            android:layout_alignRight="@id/et_password"
            android:text="自动登录"
            android:textColor="#000000" />
        <Button
            android:id="@+id/bt_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_account"
            android:layout_below="@id/cb_mima"
            android:text="登录"/>
                
        
  		
       
        </RelativeLayout>
    

</LinearLayout>
