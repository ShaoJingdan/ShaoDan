<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" 
    
    >

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_centerVertical="true"
        android:orientation="horizontal" 
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        >
               

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_dialog_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" 
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_by_itvpassport"                       
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                      
                        android:layout_gravity="left"
                        android:background="@drawable/itvpassport_bg" />

                    <Button
                        android:id="@+id/btn_by_andpassport"
                        style="@style/LoginNavigationBtnTheme"
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"               		
                        android:layout_gravity="right"    
                        android:nextFocusDown="@+id/phone_login"                   
                        android:background="@drawable/andpassport_bg" />
                    
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/login_normal_margin_top"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="@dimen/login_normal_margin_top" >

                    <EditText
                        android:id="@+id/phone_login"
                        style="@style/LoginEditTextTheme"
                        android:hint="@string/login_account_hint"
                        android:inputType="phone"
                        
                        android:maxLength="11" />
                      
                    

                    <RelativeLayout 
                        android:id="@+id/for_andpassport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"         
                        >
                        
                        <Button
                            
                        	android:id="@+id/passord"
                        	android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/password_bg"
	                        
	                         >
	                    </Button>
	                    
                        <Button
                            
                        	android:id="@+id/smscode"
                        	android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/smscode_bg"
	                        android:layout_toRightOf="@+id/passord"
	                        
	                         >
	                         
	                    </Button>
	                    
                        <Button
                            
                        	android:id="@+id/getpwd"
                        	android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/getpwd_bg"
	                        android:layout_toRightOf="@+id/smscode"
	                        android:layout_centerVertical="true"
	                         >
	                         
	                    </Button>
                        
                        <TextView 
                            android:id="@+id/time"
                        	android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:text="30s"
	                        android:textColor="@color/white"
	                        android:layout_toRightOf="@+id/smscode"
                            android:layout_centerVertical="true"
                            android:focusable="false"
                            />
                        
                        
                    </RelativeLayout>
                    
                     <EditText
                        android:id="@+id/password_login"
                        style="@style/LoginEditTextTheme"
                        android:layout_marginTop="@dimen/login_normal_margin_top"
                        android:password="true"
                        />

                     <Button
                            
                        	android:id="@+id/kongbai"
                        	android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/password_bg"
	                        
	                         >
	                    </Button>
                     
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
	                    <Button
	                        android:id="@+id/login_bt"
	                        android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/login_bg"
	                        
	                        android:layout_marginTop="@dimen/login_normal_margin_top"
	                        
	                         >
	                    </Button>
	                    
	                    <Button 
	                        android:id="@+id/logout_bt"
	                        android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
	                        android:background="@drawable/logout_bg"
	                        
	                        android:layout_marginTop="@dimen/login_normal_margin_top"
	                        
	                        
	                        />
                    </LinearLayout>


                    <Button
                        android:id="@+id/to_register"
                        style="@style/LoginBtnTheme"
                        android:layout_marginTop="@dimen/login_normal_margin_top"
                        android:text="@string/login_select_history"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>