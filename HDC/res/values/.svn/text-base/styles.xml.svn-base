<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 登录界面相关主题 -->
    <style name="LoginEditTextTheme">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:paddingLeft">@dimen/edittext_normal_paddingStart</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:ems">11</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_edittext_height</item>
    </style>

    <style name="LoginNavigationBtnTheme">
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_navigation_btn_height</item>
    </style>

    <style name="LoginBtnTheme">
        <item name="android:textColor">@drawable/btn_login_text_style</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:background">@drawable/btn_login_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_edittext_height</item>
    </style>
    
    <style name="QRCodeBtnTheme">
        <item name="android:textColor">@drawable/btn_login_text_style</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:background">@drawable/btn_qrcode_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CustomCheckbox">
        <item name="android:button">@drawable/bg_checkbox</item>
        <item name="android:paddingLeft">@dimen/login_checkbox_text_padding</item>
        <item name="android:textColor">@drawable/checkbox_text_style</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
    </style>
    
    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/trsparent</item>
    </style>

</resources>